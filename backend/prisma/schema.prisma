generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      String    @default("user")
  createdAt DateTime  @default(now())

  // ðŸ”½ Nuevo campo: relaciÃ³n inversa
  donations Donation[]
}

model Donation {
  id           Int      @id @default(autoincrement())
  orderId      String   @unique
  amount       Float
  donorEmail   String
  createdAt    DateTime @default(now())

  // Nuevo ðŸ“Œ
  paymentMethod String  @default("Paggo") // Paggo | PayPal
  status        String  @default("pending") // pending | paid | failed

  // RelaciÃ³n con User âœ”
  userId       Int?
  user         User?    @relation(fields: [userId], references: [id])
}


model becadas {
  id              Int      @id @default(autoincrement())
  nombre          String
  fecha_nacimiento DateTime
  grado           String
  tipo_beca       String
  departamento    String
  municipio       String
  comunidad       String
  talla_playera   String
  talla_zapatos   String
  necesidades     String?
  fecha_registro  DateTime @default(now())

  // RelaciÃ³n con seguimientos y datos finales
  seguimientosMensuales SeguimientoMensual[]
  datosFinales          DatosFinales[]
  
  @@map("becadas")
}

model SeguimientoMensual {
  id                 Int      @id @default(autoincrement())
  becadaId           Int
  mes                String
  principalNecesidad String
  sesion1_tema       String?
  sesion2_tema       String?
  sesion3_tema       String?
  sesion4_tema       String?
  sesion5_tema       String?
  sesion6_tema       String?
  sesion7_tema       String?
  createdAt          DateTime @default(now())

  becada             becadas  @relation(fields: [becadaId], references: [id])
}

model DatosFinales {
  id                   Int      @id @default(autoincrement())
  becadaId             Int
  anio                 Int
  insumosRecibidos     String?
  estadoCiclo          String
  papeleriaCompleta    Boolean
  solicitudContinuidad Boolean
  createdAt            DateTime @default(now())

  becada               becadas  @relation(fields: [becadaId], references: [id])
}